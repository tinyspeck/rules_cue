load(
    "//cue/private:config.bzl",
    "cue_config",
)

package(default_visibility = ["//visibility:public"])

exports_files(glob(["*.bzl"] + ["script_templates/vet_template.sh"]))

cue_config(
    name = "cue_config",
    stamp = select({
        "//cue/private:stamp": True,
        "//conditions:default": False,
    }),
    visibility = ["//visibility:public"],
)

config_setting(
    name = "darwin_x86_64",
    constraint_values = [
        "@platforms//os:macos",
        "@platforms//cpu:x86_64",
    ],
)

config_setting(
    name = "darwin_arm64",
    constraint_values = [
        "@platforms//os:macos",
        "@platforms//cpu:arm64",
    ],
)

config_setting(
    name = "linux_x86_64",
    values = {
        "cpu": "k8",
    },
)

config_setting(
    name = "linux_aarch64",
    values = {
        "cpu": "arm64",
    },
)

config_setting(
    name = "windows_x86_64",
    values = {
        "cpu": "x64_windows",
    },
)

genrule(
    name = "cue_runtime",
    srcs = select({
        "//cue:darwin_x86_64": ["@cue_runtime_darwin_amd64//:cue"],
        "//cue:darwin_arm64": ["@cue_runtime_darwin_arm64//:cue"],
        "//cue:linux_aarch64": ["@cue_runtime_linux_arm64//:cue"],
        "//cue:linux_x86_64": ["@cue_runtime_linux_amd64//:cue"],
        "//cue:windows_x86_64": ["@cue_runtime_windows_amd64//:cue"],
    }),
    outs = ["bin/cue"],
    cmd = "cp $(<) $(@)",
    executable = True,
    output_to_bindir = 1,
)
